<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - System Ogłoszeń</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    Ogłoszenia
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home"></i> Strona główna
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Listing" asp-action="Index">
                                <i class="fas fa-list"></i> Ogłoszenia
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Listing" asp-action="Create">
                                <i class="fas fa-plus"></i> Dodaj ogłoszenie
                            </a>
                        </li>
                    </ul>
                    
                    <!-- Menu użytkownika -->
                    <partial name="_LoginPartial" />
                    
                    <!-- Przełącznik języka -->
                    <div class="dropdown ms-3">
                        <button class="btn btn-outline-light dropdown-toggle" type="button" id="languageDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-globe"></i> Język
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="languageDropdown">
                            <li><a class="dropdown-item" href="?culture=pl-PL&ui-culture=pl-PL">
                                <img src="https://flagcdn.com/16x12/pl.png" alt="PL" class="me-2"> Polski
                            </a></li>
                            <li><a class="dropdown-item" href="?culture=en-US&ui-culture=en-US">
                                <img src="https://flagcdn.com/16x12/us.png" alt="EN" class="me-2"> English
                            </a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    
    <div class="container flex-grow-1">
        <main role="main" class="pb-5">
            <!-- Komunikaty -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle"></i> @ViewBag.ErrorMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="mt-auto border-top footer-custom">
        <div class="container">
            <div class="row py-4">
                <div class="col-md-4">
                    <h5>System Ogłoszeń</h5>
                    <p class="mb-0">Miejsce, gdzie znajdziesz wszystko czego szukasz.</p>
                </div>
                <div class="col-md-4">
                    <h6>Przydatne linki</h6>
                    <ul class="list-unstyled">
                        <li><a asp-controller="Home" asp-action="Index" class="text-decoration-none">Strona główna</a></li>
                        <li><a asp-controller="Listing" asp-action="Index" class="text-decoration-none">Wszystkie ogłoszenia</a></li>
                        <li><a asp-controller="Home" asp-action="Privacy" class="text-decoration-none">Polityka prywatności</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h6>Kontakt</h6>
                    <p class="mb-1"><i class="fas fa-envelope"></i> info@ogloszenia.pl</p>
                    <p class="mb-0"><i class="fas fa-phone"></i> +48 123 456 789</p>
                </div>
            </div>
            <hr class="footer-divider">
            <div class="row">
                <div class="col-12 text-center">
                    <small>&copy; 2025 - System Ogłoszeń - Wszystkie prawa zastrzeżone</small>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>