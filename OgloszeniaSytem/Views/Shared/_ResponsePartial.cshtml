@model OgloszeniaSytem.Models.Answer

<div class="border-bottom pb-3 mb-3 fade-in">
    <div class="d-flex justify-content-between align-items-start">
        <div class="d-flex">
            <div class="me-3">
                <i class="fas fa-user-circle fa-2x text-primary"></i>
            </div>
            <div>
                <h6 class="mb-1">@Model.Autor.Imie @Model.Autor.Nazwisko</h6>
                <small class="text-muted">@Model.DataOdpowiedzi.ToString("dd.MM.yyyy HH:mm")</small>
            </div>
        </div>
    </div>
    <div class="mt-2 ms-5">
        <p class="mb-0">@Html.Raw(Model.Tresc.Replace("\n", "<br>"))</p>
    </div>
</div>