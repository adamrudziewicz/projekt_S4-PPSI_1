@model OgloszeniaSytem.Models.Listing
@{
    ViewData["Title"] = "Usuń ogłoszenie";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <h4><i class="fas fa-exclamation-triangle"></i> Potwierdź usunięcie</h4>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <i class="fas fa-warning"></i> 
                    <strong>Uwaga!</strong> Ta operacja jest nieodwracalna.
                </div>
                
                <h5>Czy na pewno chcesz usunąć to ogłoszenie?</h5>
                
                <div class="mt-3 p-3 border rounded">
                    <h6><strong>@Model.Tytul</strong></h6>
                    <p class="text-muted">@Model.Opis.Substring(0, Math.Min(Model.Opis.Length, 200))@(Model.Opis.Length > 200 ? "..." : "")</p>
                    <small class="text-muted">
                        <i class="fas fa-calendar"></i> Opublikowane: @Model.DataPublikacji.ToString("dd.MM.yyyy")
                        <span class="ms-3">
                            <i class="fas fa-tag"></i> @Model.Kategoria.Nazwa
                        </span>
                    </small>
                </div>
                
                <div class="mt-4 d-flex justify-content-between">
                    <a asp-action="MyOgloszenia" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Anuluj
                    </a>
                    
                    <form asp-action="Delete" method="post" class="d-inline">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Tak, usuń ogłoszenie
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>